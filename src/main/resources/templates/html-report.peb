<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/html" xml:lang="en" lang="en">
<head>
    <title>{{report.title}}</title>
    <style>
        .overlay {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.7);
            transition: opacity 500ms;
            visibility: hidden;
            opacity: 0;
        }

        .overlay:target {
            visibility: visible;
            opacity: 1;
            overflow: scroll;
        }

        .popup {
            margin: 70px auto;
            padding: 20px;
            background: #fff;
            border-radius: 5px;
            max-width: 70%;
            position: relative;
            transition: all 5s ease-in-out;
        }

        h1, h2, h3 {
            margin-top: 0;
            color: #333;
            font-family: Tahoma, Arial, sans-serif;
        }

        .popup .close {
            position: absolute;
            top: 20px;
            right: 30px;
            transition: all 200ms;
            font-size: 30px;
            font-weight: bold;
            text-decoration: none;
            color: #333;
        }

        .popup .close:hover {
            color: #06D85F;
        }

        .popup .content {
            overflow: auto;
        }

        /*    Make Facts look like table*/
        .factTable {
            display: table;
        }

        .factRow {
            display: table-row;
        }

        .factRowHead {
            display: table-header-group;
            font-weight: bold;
        }

        .factCell, .factRowHead {
            display: table-cell;
            padding: 3px 10px;
            border: 1px solid #999999;
        }

        a, svg a text {
            text-decoration: none;
        }

        /* Some basic spacing for now  */
        section {
            border: 5px solid skyblue;
            border-radius: 5px;
            padding: 50px;
            margin: 20px;
        }

        article:nth-of-type(even) > section {
            border: 5px solid slategrey;
        }

        /* highlight key facts (generated at runtime) */
        span.highlight {
            border-radius: 25px;
            padding: 5px;
            color: black;
            background-color: palegreen;
            border: 1px solid blue;
        }
    </style>
</head>
<body>
<main role="main">
    <h1>{{ report.title }}</h1>
    {% for scenario in report.scenarios %}
    <article id="{{ scenario.id }}">
        <h2>{{scenario.title}}</h2>
        <section class="description">
            <h3>Description</h3>
            {{ scenario.description | raw }}
        </section>
        {% if scenario.facts.entries is not empty %}
        <section class="facts">
            <h3>Key Facts</h3>
            <div class="factTable">
                <div class="factRow">
                    <div class="factRowHead">Description</div>
                    <div class="factRowHead">Value</div>
                </div>
                {% for fact in scenario.facts.entries %}
                <div class="factRow">
                    <div class="factCell">{{fact.key}}</div>
                    <div class="factCell">{{fact.value}}</div>
                </div>
                {% endfor %}
            </div>
        </section>
        {% endif %}
        <section class="sequence diagram svg">
            <h3>Sequence Diagram</h3>
            <pre>{{ scenario.sequenceDiagram.svg | raw }}</pre>
            <div onclick="location.href='#!';" id="{{scenario.sequenceDiagram.id}}" class="overlay">
                <div class="popup" onclick="event.stopPropagation();">
                    <h2>PlantUml markup</h2>
                    <a class="close" href="#!">&times;</a>
                    <div class="content">
                        <pre><code>{{- scenario.sequenceDiagram.uml -}}</code></pre>
                    </div>
                </div>
            </div>
            <sub><a href="#{{scenario.sequenceDiagram.id}}">[source]</a></sub>
        </section>
        <section class="component diagram svg">
            <h3>Component Diagram</h3>
            <pre>{{ scenario.componentDiagram.svg | raw }}</pre>
            <div onclick="location.href='#!';" id="{{scenario.componentDiagram.id}}" class="overlay">
                <div class="popup" onclick="event.stopPropagation();">
                    <h2>PlantUml markup</h2>
                    <a class="close" href="#!">&times;</a>
                    <div class="content">
                        <pre><code>{{- scenario.componentDiagram.uml -}}</code></pre>
                    </div>
                </div>
            </div>
            <sub><a href="#{{scenario.componentDiagram.id}}">[source]</a></sub>
        </section>
        <!-- Section containing data for sequence diagram popups -->
        {% for dataHolder in scenario.dataHolders %}
        <div onclick="location.href='#!';" id="{{dataHolder.id}}" class="overlay">
            <div class="popup" onclick="event.stopPropagation();">
                <h2>{{ dataHolder.abbreviatedLabel | sanitise }}</h2>
                <a class="close" href="#!">&times;</a>
                <div class="content">
                    <pre>{{ dataHolder.data | raw }}</pre>
                </div>
            </div>
        </div>
        {% endfor %}
    </article>
    {% endfor %}
</main>
</body>
<footer>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.0.0/build/styles/default.min.css">
    <script src="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.0.0/build/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mark.js/8.11.1/mark.min.js"></script>
    <script>
        var options = { 
                "element": "span", 
                "className": "highlight", 
                "separateWordSearch": false,
                "acrossElements": true,
                "accuracy": { 
                    "value": "exactly", "limiters": [",", ".", ";", ":", "-"] 
                } 
        }
        {% for scenario in report.scenarios %}
            {% if scenario.facts.entries is not empty %}
                var instance = new Mark(document.querySelector("article[id='{{scenario.id}}']")); 
                {% for fact in scenario.facts.entries %}
                    instance.mark("{{fact.value}}", options);
                {% endfor %}
            {% endif %}
        {% endfor %}
        <!-- Remove highlights in svg (causes text to disappear) -->
        instance = new Mark(document.querySelectorAll("svg"));
        instance.unmark();
    </script>
</footer>
</html>
