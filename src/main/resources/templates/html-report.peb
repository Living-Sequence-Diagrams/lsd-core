<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns="http://www.w3.org/1999/html" xml:lang="en" lang="en">
<head>
    <title>{{report.title}}</title>
    <style>
        article {
            display: flex;
            flex-flow: row wrap;
            justify-content: space-around;
        }

        section.description {
            flex: 50%;
        }

        aside {
            flex: 30%;
            margin: 10px;
            padding: 20px;
        }

        section.diagram {
            flex: 100%;
        }

        .overlay {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.7);
            transition: opacity 500ms;
            visibility: hidden;
            opacity: 0;
        }

        .overlay:target {
            visibility: visible;
            opacity: 1;
            overflow: scroll;
        }

        .popup {
            margin: 70px auto;
            padding: 20px;
            background: #fff;
            border-radius: 5px;
            max-width: 70%;
            position: relative;
            transition: all 5s ease-in-out;
        }

        h1, h2, h3 {
            flex: 100%;
            margin-top: 0;
            margin-bottom: 0;
            color: #333;
            font-family: Tahoma, Arial, sans-serif;
        }

        h1 {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100px;
        }

        .popup .close {
            position: absolute;
            top: 20px;
            right: 30px;
            transition: all 200ms;
            font-size: 30px;
            font-weight: bold;
            text-decoration: none;
            color: #333;
        }

        .popup .close:hover {
            color: #06D85F;
        }

        .popup .content {
            overflow: auto;
        }

        /*    Make Facts look like table*/
        .factTable {
            display: table;
            margin: auto;
        }

        .factRow {
            display: table-row;
        }

        .factRowHead {
            display: table-header-group;
            font-weight: bold;
        }

        .factCell, .factRowHead {
            display: table-cell;
            padding: 3px 10px;
            border: 1px solid #999999;
        }

        a, svg a text {
            text-decoration: none;
        }

        /* Some basic spacing for now  */
        section, div.contents {
            border: thin solid limegreen;
            border-radius: 65px;
            padding: 50px;
            margin: 20px;
        }

        section.warn {
            border-color: orange;
        }

        section.error {
            border-color: red;
        }

        div.contents {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            justify-content: space-evenly;
            align-items: center;
            padding: 10px;
        }

        /* highlight key facts (generated at runtime) */
        span.highlight {
            border-radius: 25px;
            padding: 5px;
            color: black;
            background-color: yellow;
            border: 1px solid blue;
        }

        ul.contents li {
            font-size: large;
        }

        ul.contents li a {
            text-decoration: none;
            color: slategray;
        }

        ul.contents li::marker {
            color: limegreen;
        }

        ul.contents li.warn::marker {
            color: orange;
        }

        ul.contents li.error::marker {
            color: red;
        }

        h2.success:before, h3.success:before {
            content: "";
            padding-right: 5px;
            margin-right: 5px;
            background-color: limegreen;
        }

        h2.warn:before, h3.warn:before {
            content: "";
            padding-right: 5px;
            margin-right: 5px;
            background-color: orange;
        }

        h2.error:before, h3.error:before {
            content: "";
            padding-right: 5px;
            margin-right: 5px;
            background-color: red;
        }
    </style>
</head>
<body>
<main role="main">
    <h1>{{ report.title }}</h1>
    <div class="contents">
        <h3>Contents:</h3>
        <ul class="contents">
            {% for scenario in report.scenarios %}
            <li class="{{ scenario.status }}"><a href="#{{ scenario.id }}">{{scenario.title}}</a></li>
            {% endfor %}
        </ul>
        {% for scenario in report.scenarios %}
    </div>

    <article id="{{ scenario.id }}">
        <h2 class="{{ scenario.status }}">{{scenario.title}}</h2>
        <section class="description {{ scenario.status }}">
            <h3 class="{{ scenario.status }}">Description</h3>
            {{ scenario.description | raw }}
        </section>
        {% if scenario.facts.entries is not empty %}
        <aside class="facts">
            <div class="factTable">
                <h3>Key Facts</h3>
                <div class="factRow">
                    <div class="factRowHead">Description</div>
                    <div class="factRowHead">Value</div>
                </div>
                {% for fact in scenario.facts.entries %}
                <div class="factRow">
                    <div class="factCell">{{fact.key}}</div>
                    <div class="factCell">{{fact.value}}</div>
                </div>
                {% endfor %}
            </div>
        </aside>
        {% endif %}
        <section class="sequence diagram svg {{ scenario.status }}">
            <h3 class="{{ scenario.status }}">Sequence Diagram</h3>
            <pre>{{ scenario.sequenceDiagram.svg | raw }}</pre>
            <div onclick="location.href='#!';" id="{{scenario.sequenceDiagram.id}}" class="overlay">
                <div class="popup" onclick="event.stopPropagation();">
                    <h2>PlantUml markup</h2>
                    <a class="close" href="#!">&times;</a>
                    <div class="content">
                        <pre><code>{{- scenario.sequenceDiagram.uml -}}</code></pre>
                    </div>
                </div>
            </div>
            <sub><a href="#{{scenario.sequenceDiagram.id}}">[source]</a></sub>
            <sub><a href="#{{scenario.componentDiagram.id}}">[component diagram]</a></sub>
        </section>
        <!-- Popup for component diagram -->
        <div onclick="location.href='#!';" id="{{ scenario.componentDiagram.id }}" class="overlay">
            <div class="popup" onclick="event.stopPropagation();">
                <h2>Component Diagram</h2>
                <a class="close" href="#!">&times;</a>
                <div class="content">
                    <sup>[Requires Graphviz to be installed]</sup>
                    <pre>{{ scenario.componentDiagram.svg | raw }}</pre>
                </div>
                <sub><a href="#uml{{scenario.componentDiagram.id}}">[source]</a></sub>
            </div>
        </div>
        <!-- Popup for component diagram UML via component diagram popup -->
        <div onclick="location.href='#!';" id="uml{{scenario.componentDiagram.id}}" class="overlay">
            <div class="popup" onclick="event.stopPropagation();">
                <h2>PlantUml markup</h2>
                <a class="close" href="#{{scenario.componentDiagram.id}}">&times;</a><!--show previous popup on close-->
                <div class="content">
                    <pre><code>{{- scenario.componentDiagram.uml -}}</code></pre>
                </div>
            </div>
        </div>
        <!-- Section containing data for sequence diagram popups -->
        {% for dataHolder in scenario.dataHolders %}
        <div onclick="location.href='#!';" id="{{dataHolder.id}}" class="overlay">
            <div class="popup" onclick="event.stopPropagation();">
                <h2>{{ dataHolder.abbreviatedLabel | sanitise }}</h2>
                <a class="close" href="#!">&times;</a>
                <div class="content">
                    <pre>{{ dataHolder.data | raw }}</pre>
                </div>
            </div>
        </div>
        {% endfor %}
    </article>
    {% endfor %}
</main>
</body>
<footer>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.0.0/build/styles/default.min.css">
    <script src="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.0.0/build/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mark.js/8.11.1/mark.min.js"></script>
    <script>
        var options = { 
                "element": "span", 
                "className": "highlight", 
                "separateWordSearch": false,
                "acrossElements": true,
                "accuracy": { 
                    "value": "exactly", "limiters": [ ",", ".", ";", ":", "-", "(", ")"] 
                } 
        }
        {% for scenario in report.scenarios %}
            {% if scenario.facts.entries is not empty %}
                var instance = new Mark(document.querySelector("article[id='{{scenario.id}}']")); 
                {% for fact in scenario.facts.entries %}
                    instance.mark("{{fact.value}}", options);
                {% endfor %}
            {% endif %}
        {% endfor %}
        <!-- Remove highlights in svg (causes text to disappear) -->
        instance = new Mark(document.querySelectorAll("svg"));
        instance.unmark();
    </script>
</footer>
</html>
